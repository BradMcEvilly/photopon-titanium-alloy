<Alloy>
	<Window id="winWelcome" title="Welcome">
		<TableView id="welcomeTable" scrollable="false">
			<TableViewRow id="logoRow">
				<View id="logoView">
					<ImageView id="imgLogo" />
				</View>
			</TableViewRow>
			<TableViewRow id="buttonRowLogIn">
				<Button id="logInBtn" onClick="logInBtnHandler">LOG IN</Button>
			</TableViewRow>
			<TableViewRow id="buttonRowSignUp">
				<Button id="signUpBtn" onClick="signUpBtnHandler">SIGN UP</Button>
			</TableViewRow>
		</TableView>
	</Window>
</Alloy>