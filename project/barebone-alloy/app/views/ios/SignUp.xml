<Alloy>
	<Window id="winSignUp" title="Sign Up" onOpen="winSignUpOpenHandler">
		<TableView id="signUpTable">
			<TableViewRow id="row">
				<TextField id="emailField" onChange="validateSignUp" onReturn="focusNext"/>
			</TableViewRow>
			<TableViewRow id="row">
				<TextField id="passwordField" onChange="validateSignUp" passwordMask="true" onReturn="submitBtnHandler"/>
			</TableViewRow>
			<TableViewRow id="row">
				<View id="btnSignUp" visible="false">
					<Label id="lblSignUp" />
					<ActivityIndicator id="ind">
					</ActivityIndicator>
				</View>
			</TableViewRow>
		</TableView>
	</Window>
</Alloy>